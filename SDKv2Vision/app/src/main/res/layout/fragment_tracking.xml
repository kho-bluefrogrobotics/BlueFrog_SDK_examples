<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.tracking">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tracking"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-199dp" />

        <TextView
            android:id="@+id/resultText"
            android:layout_width="208dp"
            android:layout_height="109dp"
            android:layout_marginStart="176dp"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:text="Salut"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <ImageView
            android:id="@+id/previewCam"
            android:layout_width="365dp"
            android:layout_height="230dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="270dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <Button
            android:id="@+id/buttonAprilTag"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="240dp"
            android:text="Start Tracking"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <Button
            android:id="@+id/buttonPersonDetect"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonAprilTag"
            android:layout_alignStart="@+id/buttonAprilTag"
            android:layout_marginStart="128dp"
            android:text="Get Target info"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/buttonAprilTag"
            app:layout_constraintTop_toTopOf="@+id/buttonAprilTag" />

        <Button
            android:id="@+id/buttonFaceDetect"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonAprilTag"
            android:layout_alignStart="@+id/buttonAprilTag"
            android:layout_marginStart="252dp"
            android:text="Stop Tracking"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/buttonAprilTag"
            app:layout_constraintTop_toTopOf="@+id/buttonAprilTag" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>