<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.facerecog">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Face recog"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/buttonStopCam3"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonStart"
            android:layout_alignStart="@+id/buttonStart"
            android:layout_marginStart="252dp"
            android:text="Load Faces"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/buttonStart"
            app:layout_constraintTop_toTopOf="@+id/buttonStart" />

        <EditText
            android:id="@+id/editTextmotionThres"
            android:layout_width="117dp"
            android:layout_height="57dp"
            android:layout_marginStart="36dp"
            android:ems="10"
            android:text="Name"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/buttonStart"
            tools:text="Name" />

        <TextView
            android:id="@+id/resultText"
            android:layout_width="208dp"
            android:layout_height="109dp"
            android:layout_marginStart="176dp"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:text="Salut"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <ImageView
            android:id="@+id/previewCam"
            android:layout_width="365dp"
            android:layout_height="230dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="270dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <Button
            android:id="@+id/buttonStart"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="240dp"
            android:text="Save Face"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <Button
            android:id="@+id/buttonStop"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonStart"
            android:layout_alignStart="@+id/buttonStart"
            android:layout_marginStart="128dp"
            android:text="Recog Face"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/buttonStart"
            app:layout_constraintTop_toTopOf="@+id/buttonStart" />

        <Button
            android:id="@+id/buttonFaceDetect"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonStart"
            android:layout_alignStart="@+id/buttonStart"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Get top-K"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/buttonStopCam3"
            app:layout_constraintTop_toTopOf="@+id/buttonStopCam3" />

        <Button
            android:id="@+id/buttonStopCam4"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonStart"
            android:layout_alignStart="@+id/buttonStart"
            android:text="Get all"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/buttonStopCam3"
            app:layout_constraintTop_toBottomOf="@+id/buttonStopCam3" />

        <Button
            android:id="@+id/buttonStopCam5"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonStart"
            android:layout_alignStart="@+id/buttonStart"
            android:layout_marginStart="16dp"
            android:text="Delete"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/buttonStopCam3"
            app:layout_constraintTop_toBottomOf="@+id/buttonFaceDetect" />

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="80dp"
            android:layout_height="46dp"
            android:layout_marginStart="112dp"
            android:ems="10"
            android:inputType="number"
            android:text="0"
            app:layout_constraintStart_toStartOf="@+id/buttonStopCam5"
            app:layout_constraintTop_toTopOf="@+id/buttonStopCam5" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>