<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_face"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.bfr.welcomeproto.MainActivity">


    <Button
        android:id="@+id/resetBtn"
        android:layout_width="83dp"
        android:layout_height="40dp"
        android:text="RESET"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/startChckBx"
        app:layout_constraintTop_toTopOf="@+id/startChckBx" />

    <CheckBox
        android:id="@+id/startChckBx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="344dp"
        android:text="start/stop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/enableSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="360dp"
        android:layout_marginTop="12dp"
        android:text="Wheels"
        app:layout_constraintStart_toEndOf="@+id/resetBtn"
        app:layout_constraintTop_toTopOf="@+id/resetBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>